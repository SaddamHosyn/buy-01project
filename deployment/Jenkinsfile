pipeline {
    agent any

    environment {
        DOCKER_USER          = 'hussainsaddam'
        REGISTRY_CREDENTIALS = 'docker-hub-credentials'
        BUILD_VERSION        = "${env.BUILD_NUMBER}"
    }

    triggers {
        pollSCM('H/5 * * * *')
    }

    stages {

        stage('Checkout') {
            steps {
                echo "üì¶ Checking out code..."
                checkout([$class: 'GitSCM',
                    branches: [[name: '*/jenkindev']],
                    extensions: [[$class: 'WipeWorkspace']],
                    userRemoteConfigs: [[url: 'https://github.com/SaddamHosyn/buy-01project.git']]
                ])
            }
        }

        stage('Test') {
            steps {
                echo 'üß™ Running tests (non-blocking)...'
                sh '''
                    set +e
                    docker run --rm -v $PWD:/workspace -w /workspace/service-registry   maven:3.9-eclipse-temurin-17 mvn -q test || echo "service-registry tests failed"
                    docker run --rm -v $PWD:/workspace -w /workspace/api-gateway       maven:3.9-eclipse-temurin-17 mvn -q test || echo "api-gateway tests failed"
                    docker run --rm -v $PWD:/workspace -w /workspace/user-service      maven:3.9-eclipse-temurin-17 mvn -q test || echo "user-service tests failed"
                    docker run --rm -v $PWD:/workspace -w /workspace/product-service   maven:3.9-eclipse-temurin-17 mvn -q test || echo "product-service tests failed"
                    docker run --rm -v $PWD:/workspace -w /workspace/media-service     maven:3.9-eclipse-temurin-17 mvn -q test || echo "media-service tests failed"
                    set -e
                '''
            }
        }

        stage('Build Docker Images') {
            steps {
                echo "üê≥ Building Docker Images..."
                script {
                    sh "docker build -t ${DOCKER_USER}/buy-01-service-registry:latest ./service-registry"
                    sh "docker build -t ${DOCKER_USER}/buy-01-api-gateway:latest ./api-gateway"
                    sh "docker build -t ${DOCKER_USER}/buy-01-user-service:latest ./user-service"
                    sh "docker build -t ${DOCKER_USER}/buy-01-product-service:latest ./product-service"
                    sh "docker build -t ${DOCKER_USER}/buy-01-media-service:latest ./media-service"
                    sh "docker build -t ${DOCKER_USER}/buy-01-frontend:latest ./buy-01-ui"
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                echo "üöÄ Pushing images to Docker Hub..."
                withCredentials([usernamePassword(
                    credentialsId: REGISTRY_CREDENTIALS,
                    usernameVariable: 'DOCKER_USER',
                    passwordVariable: 'DOCKER_PASS'
                )]) {
                    sh 'echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin'
                    sh "docker push ${DOCKER_USER}/buy-01-service-registry:latest"
                    sh "docker push ${DOCKER_USER}/buy-01-api-gateway:latest"
                    sh "docker push ${DOCKER_USER}/buy-01-user-service:latest"
                    sh "docker push ${DOCKER_USER}/buy-01-product-service:latest"
                    sh "docker push ${DOCKER_USER}/buy-01-media-service:latest"
                    sh "docker push ${DOCKER_USER}/buy-01-frontend:latest"
                }
            }
        }

        stage('Deploy Locally') {
            steps {
                echo "üöÄ Deploying locally with docker compose..."
                sh '''
                    cd deployment
                    docker compose pull
                    docker compose up -d --remove-orphans
                    echo "‚úÖ Local deployment completed!"
                '''
            }
        }
    }

    post {
        success {
            echo "‚úÖ Pipeline completed successfully!"
            echo "Build #${env.BUILD_NUMBER} - All stages passed"
        }
        failure {
            echo "‚ùå Pipeline failed!"
            echo "Build #${env.BUILD_NUMBER} - Check logs for details"
        }
    }
}
